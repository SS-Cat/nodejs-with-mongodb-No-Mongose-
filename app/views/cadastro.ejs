<!DOCTYPE HTML>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">

		<title>MMORPG - Game of Thrones</title>
		
		<!-- JQuery -->
		<script src="js/jquery-2.2.1.js"></script>

		<!-- bootstrap - link cdn -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
	
		<!-- incluindo css -->
		<link href="css/style.css" rel="stylesheet">

	</head>

	<body class="body-index">

		<nav class="navbar navbar-default navbar-static-top">
			<div class="container">
				<form class="form-inline form-entrar">
					<div class="form-group">				
						<a href="/"><button type="button" class="btn btn-success">Voltar</button></a>
					</div>
				</form>
			</div>
			
		</nav>

	    <div class="container">
				
			<div id="casa"><%= data.casa %></div>
			<% if(validation) { %>
				<div class="alert alert-danger">
					<strong>Atenção!</strong>
					<ul>
						<% for(const e of validation) { %>
							<li><%= e.msg %></li>
						<% } %>
					</ul>
				</div>
			<% } %>

			<form class="form-cadastro" action="/cadastrar" method="POST">
			
				<div class="row">
					<div class="col-xs-4">
						<div class="form-group">
							<label for="nome" class="col-sm-2 col-form-label">Nome</label>
							<input type="nome" class="form-control" id="nome" name="nome" placeholder="Nome" value="<%= data.nome %>">
						</div>
					</div>
					
					<div class="col-xs-4">
						<div class="form-group">
							<label for="usuario" class="col-sm-2 col-form-label">Usuário</label>
							<input type="usuario" class="form-control" id="usuario" name="usuario" placeholder="Usuário" value="<%= data.usuario %>">
						</div>
					</div>
					
					<div class="col-xs-4">
						<div class="form-group">
							<label for="senha" class="col-sm-2 col-form-label">Senha</label>
							<input type="password" class="form-control" id="senha" name="senha" placeholder="Password" value="<%= data.senha %>">
						</div>
					</div>
				</div>
				
				<div class="form-group row">
				
        			<div class="col-xs-2">
        				<label for="arryn"><img src="images/casa_arryn.jpg" class="img-responsive img-radio"></label>
						<center>
							<input type="radio" id="arryn" name="casa" value="arryn" <%= data.casa==='arryn'?`checked`:`` %>> Casa Arryn
						</center>
        			</div>
					
					<div class="col-xs-2">
        				<label for="baratheon"><img src="images/casa_baratheon.jpg" class="img-responsive img-radio"></label>
						<center>
							<input type="radio" id="baratheon" name="casa" value="baratheon" <%= data.casa==='baratheon'?`checked`:`` %>> Casa Baratheon
						</center>
        			</div>
					
					<div class="col-xs-2">
        				<label for="greyjoy"><img src="images/casa_greyjoy.jpg" class="img-responsive img-radio"></label>
						<center>
							<input type="radio" id="greyjoy" name="casa" value="greyjoy" <%= data.casa==='greyjoy'?`checked`:`` %>> Casa Greyjoy
						</center>
        			</div>
					
					<div class="col-xs-2">
        				<label for="lannister"><img src="images/casa_lannister.jpg" class="img-responsive img-radio"></label>
						<center>
							<input type="radio" id="lannister" name="casa" value="lannister" <%= data.casa==='lannister'?`checked`:`` %>> Casa Lannister
						</center>
        			</div>
					
					<div class="col-xs-2">
        				<label for="martell"><img src="images/casa_martell.jpg" class="img-responsive img-radio"></label>
						<center>
							<input type="radio" id="martell" name="casa" value="martell" <%= data.casa==='martell'?`checked`:`` %>> Casa Martell
						</center>
        			</div>
					
					<div class="col-xs-2">
        				<label for="stark"><img src="images/casa_stark.jpg" class="img-responsive img-radio"></label>
						<center>
							<input type="radio" id="stark" name="casa" value="stark" <%= data.casa==='stark'?`checked`:`` %>> Casa Stark
						</center>
        			</div>
        		</div>
				
				<div class="form-group row">
				
					<div class="col-xs-3"></div>
				
        			<div class="col-xs-2">
        				<label for="targaryen"><img src="images/casa_targaryen.jpg" class="img-responsive img-radio"></label>
						<center>
							<input type="radio" id="targaryen" name="casa" value="targaryen" <%= data.casa==='targaryen'?`checked`:`` %>> Casa Targaryen
						</center>
        			</div>
					
					<div class="col-xs-2">
        				<label for="tully"><img src="images/casa_tully.jpg" class="img-responsive img-radio"></label>
						<center>
							<input type="radio" id="tully" name="casa" value="tully" <%= data.casa==='tully'?`checked`:`` %>> Casa Tully
						</center>
        			</div>
					
					<div class="col-xs-2">
        				<label for="tyrell"><img src="images/casa_tyrell.jpg" class="img-responsive img-radio"></label>
						<center>
							<input type="radio" id="tyrell" name="casa" value="tyrell" <%= data.casa==='tyrell'?`checked`:`` %>> Casa Tyrell
						</center>
        			</div>
					
					<div class="col-xs-3"></div>
				</div>		
				
			
				<div class="form-group row">
					<button type="submit" class="btn btn-primary">Confirmar cadastro</button>
				</div>
				

			</form>
					
	    </div>	

	</body>
</html>